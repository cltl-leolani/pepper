[loggers]
keys: root, pepper

[handlers]
keys: console, file

[formatters]
keys: pepperFormatter

[logger_root]
level: INFO
handlers: console, file

[logger_pepper]
level: NOTSET
handlers:
propagate:1
qualname: pepper

[handler_console]
class: StreamHandler
level: NOTSET
formatter: pepperFormatter
args: (sys.stdout,)

[handler_file]
class: FileHandler
level: NOTSET
formatter: pepperFormatter
args: ('log.txt', 'w')

[formatter_pepperFormatter]
format: %(asctime)s %(levelname)-8s %(name)-60s %(message)s
datefmt: %x %X